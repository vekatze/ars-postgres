{
  target {
    test {
      main "test.nt",
      build-option [
        "$(pkg-config libpq --libs --cflags)",
        // (AddressSanitizer reports memory leaks in libpq)
        "-fsanitize=address",
      ],
    },
  },
  zen {
    build-option [
      "$(pkg-config libpq --libs --cflags)",
    ],
  },
  foreign {
    input [
      "source/foreign.c",
    ],
    output [
      "foreign.o",
    ],
    script [
      "{{clang}} $(pkg-config libpq --libs --cflags) -c -flto=thin -O2 source/foreign.c -o {{foreign}}/foreign.o",
    ],
  },
  static {
    reset "source/sql/reset.sql",
    insert-author "source/sql/author/insert.sql",
    select-author "source/sql/author/select.sql",
  },
  dependency {
    core {
      digest "D2GAOKIzIcXb0dBdev6RHCZMzhzfhu6LCQpCqfr5ItQ",
      mirror [
        "https://github.com/vekatze/neut-core/raw/main/archive/0-50-35.tar.zst",
      ],
      enable-preset true,
    },
    time {
      digest "KqazxRL7BK2tGXBV1I4KJcqs-IHvZmDuASl9CZK4Uz4",
      mirror [
        "https://github.com/vekatze/time-nt/raw/main/archive/0-4-23.tar.zst",
      ],
    },
  },
}
