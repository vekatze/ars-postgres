{
  target {
    test {
      main "test.nt",
      build-option [
        "$(pkg-config libpq --libs --cflags)",
        // (AddressSanitizer might report memory leaks in libpq on macOS)
        "-fsanitize=address",
      ],
    },
  },
  zen {
    build-option [
      "$(pkg-config libpq --libs --cflags)",
    ],
  },
  foreign {
    input [
      "source/foreign.c",
    ],
    output [
      "foreign.o",
    ],
    script [
      "{{clang}} $(pkg-config libpq --libs --cflags) -c -flto=thin -O2 source/foreign.c -o {{foreign}}/foreign.o",
    ],
  },
  static {
    reset "source/sql/reset.sql",
    insert-author "source/sql/author/insert.sql",
    select-author "source/sql/author/select.sql",
  },
  dependency {
    core {
      digest "BUewAg9Hlxq8P3gmtqAQ_nMu8uGww_OfgHK512lsjCw",
      mirror [
        "https://github.com/vekatze/neut-core/raw/main/archive/0-50-40.tar.zst",
      ],
      enable-preset true,
    },
    time {
      digest "AQ0vgKA3FqGYKlhHJ5R6pSN9uNscD6dKzXNC9kRV1VI",
      mirror [
        "https://github.com/vekatze/time-nt/raw/main/archive/0-4-27.tar.zst",
      ],
    },
  },
}
